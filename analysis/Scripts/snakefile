rule mass_fitting_all:
	rule GaussCB_fits:
		rule mass_fitting_bins_GaussCB:
     			input: ["Imports.py", "MassFitting/fit.py","MassFitting/MassfitLib.py","MassFitting/fittingDict.py"]
     			output:PLOT_PATH+"MassFitting/Single/GaussCB{year}_Mag{magpol}_{particle}_ybin_{rapidity}_ptbin_{momentum}.root.pdf"
     			run:shell ("python  MassFitting/fit.py -s "GaussCB" -m single" -y [wildcards.year} -o {wildcards.magpol} -p {wildcards.particle} -r {wildcards.rapidity} -t {wildcards.momentum}")

		rule mass_fitting_years_GaussCB:
     			input: ["Imports.py","MassFitting/fit.py", "MassFitting/MassfitLib.py","MassFitting/yearTotalFit_Dict.py"]
     			output: PLOT_PATH+"MassFitting/Year/GaussCB{year}_Mag{magpol}_{particle}_total.root.pdf"
     			shell: "python  MassFitting/fit.py -s "GaussCB" -m "year" -y {wildcards.year} -o {wildcards.magpol} -p {wildcards.particle}"

		rule mass_fitting_comb_bins_GaussCB:
     			input: ["Imports.py","MassFitting/fit.py", "MassFitting/MassfitLib.py","MassFitting/CombinedBinFit_Dict.py"] 
     			output: (PLOT_PATH+"MassFitting/Combined/GaussCB{year}_Mag{magpol}_{particle}_ybin_{rapidity}.root.pdf",PLOT_PATH+"MassFitting/Combined/GaussCB{year}_Mag{magpol}_{particle}_ptbin_{momentum}")
     			shell: "python  MassFitting/fit.py -s "GaussCB" -m "combined" -y {wildcards.year} -o {wildcards.magpol} -p {wildcards.particle} -r {wildcards.rapidty} -t {wildcards.momentum}"

